<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.z3r0byte.magistify.AppointmentActivity">

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:textSize="14sp"
            android:text="@string/switch_toggle_appointment_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:id="@+id/enable"
            android:switchPadding="12dp" />

        <Switch
            android:enabled="false"
            android:layout_below="@+id/enable"
            android:textSize="14sp"
            android:text="@string/switch_own_appointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:id="@+id/own_appointments"
            android:switchPadding="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/blue_bar"
        android:background="@color/primary">

    </RelativeLayout>

</RelativeLayout>
