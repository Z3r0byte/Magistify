<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/list_text_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="100dp"
            android:singleLine="true"
            android:text="Engels - Heel erg lange omschrijving van een proefwerk"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/list_text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_text_subject"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="2-4-2016"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:singleLine="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="9.5"
            android:id="@+id/list_text_grade"
            android:layout_marginRight="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="@color/md_black_1000"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/list_imageview_grade_new"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/magistify_512"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>

</RelativeLayout>